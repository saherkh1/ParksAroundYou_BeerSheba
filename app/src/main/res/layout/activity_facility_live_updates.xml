<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_updates_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/list_layout_border"

    tools:context=".facilityLiveUpdates">

    <Button
        android:id="@+id/vacantParking_helpful"
        android:layout_width="105dp"
        android:layout_height="75dp"

        android:background="@drawable/helpful_button_boder"
        android:drawableLeft="@android:drawable/presence_online"
        android:padding="5dp"
        android:text="+"
        android:textColor="#1B5E20"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crowded_helpful"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/crowded_wrong"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/wrong_button_border"
        android:drawableLeft="@android:drawable/presence_busy"
        android:padding="5dp"
        android:text="-"
        android:textColor="#D50000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maintenance_wrong_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/vacantParking_wrong"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/wrong_button_border"
        android:drawableLeft="@android:drawable/presence_busy"
        android:padding="5dp"
        android:text="-"
        android:textColor="#D50000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crowded_wrong"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/crowded"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="Crowded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dirty_wrong"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dirty_helpful"
        app:layout_constraintTop_toBottomOf="@+id/maintenance_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/vacantParking"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="Vacant             Parking"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dirty_wrong"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dirty_helpful"
        app:layout_constraintTop_toBottomOf="@+id/crowded"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/crowded_helpful"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/helpful_button_boder"
        android:drawableLeft="@android:drawable/presence_online"
        android:padding="5dp"
        android:text="+"
        android:textColor="#1B5E20"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maintenance_helpful_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/closed"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="Closed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dirty_wrong"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dirty_helpful"
        app:layout_constraintTop_toBottomOf="@+id/dirty"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/closed_helpful"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/helpful_button_boder"
        android:drawableLeft="@android:drawable/presence_online"
        android:padding="5dp"
        android:text="+"
        android:textColor="#1B5E20"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dirty_helpful"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/closed_wrong"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/wrong_button_border"
        android:drawableLeft="@android:drawable/presence_busy"
        android:padding="5dp"
        android:text="-"
        android:textColor="#D50000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dirty_wrong"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar8"
        android:layout_width="412dp"
        android:layout_height="55dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/facility_name2"
        android:layout_width="245dp"
        android:layout_height="37dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar8" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar9"
        android:layout_width="414dp"
        android:layout_height="55dp"
        android:background="#CFF0FF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar8"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/goto_description"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="#80DEEA"
        android:drawableRight="@android:drawable/ic_dialog_dialer"
        android:text="Description and Ratings"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar9"
        app:layout_constraintEnd_toEndOf="@+id/toolbar9"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="@+id/toolbar9"
        app:layout_constraintTop_toBottomOf="@+id/toolbar8" />

    <TextView
        android:id="@+id/live_conditions_title"
        android:layout_width="172dp"
        android:layout_height="30dp"
        android:text="live Conditions"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar9"
        app:layout_constraintEnd_toEndOf="@+id/toolbar9"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="@+id/toolbar9"
        app:layout_constraintTop_toBottomOf="@+id/toolbar8" />

    <ImageButton
        android:id="@+id/add_favorites"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar8"
        app:layout_constraintEnd_toEndOf="@+id/toolbar8"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="@+id/toolbar8"
        app:layout_constraintTop_toTopOf="@+id/toolbar8"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <ImageButton
        android:id="@+id/back_btn2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar8"
        app:srcCompat="@drawable/abc_vector_test" />

    <Button
        android:id="@+id/dirty_helpful"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/helpful_button_boder"
        android:drawableLeft="@android:drawable/presence_online"
        android:padding="5dp"
        android:text="+"
        android:textColor="#1B5E20"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/dirty_wrong"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/wrong_button_border"
        android:drawableLeft="@android:drawable/presence_busy"
        android:padding="5dp"
        android:text="-"
        android:textColor="#D50000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/dirty"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:autoText="false"
        android:background="@drawable/button_border"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="Dirty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dirty_wrong"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dirty_helpful"
        app:layout_constraintTop_toBottomOf="@+id/toolbar9"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/noisy"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="Noisy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dirty_wrong"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dirty_helpful"
        app:layout_constraintTop_toBottomOf="@+id/closed"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/noisy_helpful"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/helpful_button_boder"
        android:drawableLeft="@android:drawable/presence_online"
        android:padding="5dp"
        android:text="+"
        android:textColor="#1B5E20"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closed_helpful"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/noisy_wrong"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/wrong_button_border"
        android:drawableLeft="@android:drawable/presence_busy"
        android:padding="5dp"
        android:text="-"
        android:textColor="#D50000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closed_wrong"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/validate_dirty_btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="validate dirty"
        android:textSize="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/dirty"
        app:layout_constraintEnd_toStartOf="@+id/dirty_wrong"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dirty_helpful"
        app:layout_constraintTop_toTopOf="@+id/dirty"
        app:layout_constraintVertical_bias="0.11" />
    <Button
        android:id="@+id/validate_closed_btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="validate closed"
        android:textSize="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/closed"
        app:layout_constraintEnd_toStartOf="@+id/closed_wrong"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/closed_helpful"
        app:layout_constraintTop_toTopOf="@+id/closed"
        app:layout_constraintVertical_bias="0.11"/>
    <Button
        android:id="@+id/validate_noisy_btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="validate noisy"
        android:textSize="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/noisy"
        app:layout_constraintEnd_toStartOf="@+id/noisy_wrong"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/noisy_helpful"
        app:layout_constraintTop_toTopOf="@+id/noisy"
        app:layout_constraintVertical_bias="0.11"/>

    <Button
        android:id="@+id/maintenance_btn"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/button_border"
        android:drawableLeft="@android:drawable/ic_menu_add"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:padding="5dp"
        android:text="maintenance"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/noisy_wrong"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/noisy_helpful"
        app:layout_constraintTop_toBottomOf="@+id/noisy"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/maintenance_helpful_btn"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/helpful_button_boder"
        android:drawableLeft="@android:drawable/presence_online"
        android:padding="5dp"
        android:text="+"
        android:textColor="#1B5E20"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noisy_helpful"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/maintenance_wrong_btn"
        android:layout_width="105dp"
        android:layout_height="75dp"
        android:background="@drawable/wrong_button_border"
        android:drawableLeft="@android:drawable/presence_busy"
        android:padding="5dp"
        android:text="-"
        android:textColor="#D50000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noisy_wrong"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/validate_maintenance_btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="validate maintenance"
        android:textSize="9dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/maintenance_btn"
        app:layout_constraintEnd_toStartOf="@+id/maintenance_wrong_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/maintenance_helpful_btn"
        app:layout_constraintTop_toTopOf="@+id/maintenance_btn"
        app:layout_constraintVertical_bias="0.11"/>
    <Button
        android:id="@+id/validate_crowded_btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="validate crowded"
        android:textSize="9dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/crowded"
        app:layout_constraintEnd_toStartOf="@+id/crowded_wrong"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/crowded_helpful"
        app:layout_constraintTop_toTopOf="@+id/crowded"
        app:layout_constraintVertical_bias="0.11"/>

    <Button
        android:id="@+id/validate_vacantParking_btn"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="validate Vacant Parking"
        android:textSize="9dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/vacantParking"
        app:layout_constraintEnd_toStartOf="@+id/vacantParking_wrong"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/vacantParking_helpful"
        app:layout_constraintTop_toTopOf="@+id/vacantParking"
        app:layout_constraintVertical_bias="0.11" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="344dp"
        android:layout_height="89dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vacantParking"
        app:srcCompat="?android:attr/alertDialogIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>