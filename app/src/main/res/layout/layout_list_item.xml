<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_list_item"
    android:layout_width="match_parent"
    android:background="@drawable/list_layout_border"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/location_name"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/neighborhood_name"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="false"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/street_name"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_name"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/neighborhood_name"
        android:layout_toRightOf="@+id/neighborhood_name"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/street"
        android:layout_width="74dp"
        android:layout_height="23dp"
        android:layout_below="@+id/location_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/street_name"
        android:layout_toRightOf="@+id/street_name"
        android:text="רחוב :"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/neighborhood"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/location_name"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/neighborhood_name"
        android:layout_toRightOf="@+id/neighborhood_name"
        android:text="שכונה :"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>